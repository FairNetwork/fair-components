    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-storybook": "^0.11.2",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "storybook": "^8.5.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
